---
import ImagesGrid from './ImagesGrid.astro';
import type { ContentGridType as Props } from '~/types';
import WidgetWrapper from '../ui/WidgetWrapper.astro';

const {
  contentArray = [],
  isAfterContent = false,
  isDark = false,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  isDark={isDark}
  containerClass={`max-w-4xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''}}`}
  bg={bg}
>

{
  contentArray && (
    <div class="text-center items-center">
      {contentArray.map((content) => <ImagesGrid content={content} />)}
    </div>
  )
}

</WidgetWrapper>