---
import SwiperSlider from './SwiperSlider.astro';
import type { SliderCardType } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props {
  sliderCard: SliderCardType;
}

const { sliderCard } = Astro.props;

const images = sliderCard.images;
const title = sliderCard.title;
const items = sliderCard.items;
const callToAction = sliderCard.callToAction;
---

<div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70 intersect-once motion-safe:opacity-0 motion-safe:intersect:animate-fade">
    <div>
      <SwiperSlider images={images} />
    </div>
    <div class="p-4 md:p-5">
        <h3 class="text-lg font-bold text-gray-800 dark:text-white">
        <div set:text={title} />
        </h3>
        <p class="mt-1 text-gray-500 dark:text-neutral-400">
          {items && (items.map((item) => <div set:text={item.description} />))}
        </p>
        <div class="mt-4">
          <Button variant="secondary" {...callToAction} />
        </div>
    </div>
</div>