---
import SwiperSlider from './SwiperSlider.astro';
import type { SliderCardType } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props {
  sliderCard: SliderCardType;
}

const { sliderCard } = Astro.props;

const title = sliderCard.title;
const subTitle = sliderCard.subTitle;
const text = sliderCard.text;
const images = sliderCard.images;
const callToAction = sliderCard.callToAction;
---


<div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-xl md:flex-row md:max-w-full dark:border-gray-700 dark:bg-gray-800 p-4">
  <div class="object-cover w-full h-auto md:w-2/3">
    <SwiperSlider images={images} />
  </div>
  <div class="flex flex-col justify-between p-4 leading-normal">
      <h1 class="mb-2 font-bold text-xl tracking-tight text-gray-900 dark:text-white"><div set:text={title} /></h1>
      <h2 class="mb-2 font-bold text-sm tracking-tight text-violet-600 dark:text-white"><div set:text={subTitle} /></h2>
      <h3 class="mb-3 mt-4 sm:mt-0 text-sm font-normal text-gray-700 dark:text-gray-200"><div set:text={text} /></h3>
      <div class="mt-4">
        <Button variant="secondary" {...callToAction} />
      </div>
  </div>
</div>
