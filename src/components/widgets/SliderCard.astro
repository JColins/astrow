---
import SwiperSlider from './SwiperSlider.astro';
import type { SliderCardType } from '~/types';

export interface Props {
  sliderCard: SliderCardType;
}

const { sliderCard } = Astro.props;

const images = sliderCard.images;
const title = sliderCard.title;
const items = sliderCard.items;
---

<div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70">
    <div>
    <SwiperSlider images={images} />
    </div>
    <div class="p-4 md:p-5">
        <h3 class="text-lg font-bold text-gray-800 dark:text-white">
        <div set:text={title} />
        </h3>
        <p class="mt-1 text-gray-500 dark:text-neutral-400">
        {items && (items.map((item) => <div set:html={item.description} />))}
        </p>
        <a class="mt-2 py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="#">
        Go somewhere
        </a>
    </div>
</div>