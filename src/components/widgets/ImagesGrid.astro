---
import type { SliderCardType } from '~/types';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import SwiperSlider from './SwiperSlider.astro';

export interface Props {
  sliderCard: SliderCardType;
}

const { sliderCard } = Astro.props;

const title = sliderCard.title;
const subTitle = sliderCard.subTitle;
const text = sliderCard.text;
const images = sliderCard.images;
const callToAction = sliderCard.callToAction;
---

<h1 class="mb-2 font-bold text-3xl tracking-tight text-gray-900 dark:text-white"><div set:text={title} /></h1>
<h2 class="mb-2 font-bold text-lg tracking-tight text-accent dark:text-white"><div set:text={subTitle} /></h2>

<!-- <SwiperSlider images={images}></SwiperSlider> -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-1 sm:gap-2 mt-4 mb-10">
    {images.map((image) => (
        <div class="h-auto max-w-full rounded-lg">
        {
          <Image
              width={image.src.width}
              height={image.src.height}
              
              {...image}
          />
        }
        </div>
      ))}
</div>
<h3 class="my-4 w-full font-normal text-gray-700 dark:text-gray-200"><div set:text={text} /></h3>
<Button variant="primary" {...callToAction} />
<hr
  class="my-12 h-px border-t-0 bg-transparent bg-gradient-to-r from-transparent via-slate-50 to-transparent opacity-50 dark:via-neutral-400" />



