---
import '@fontsource-variable/rubik';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Rubik Variable';
    --aw-font-serif: 'Rubik Variable';
    --aw-font-heading: 'Rubik Variable';

    /* --aw-color-primary: rgb(152, 216, 239); */
    --aw-color-primary: #E85A4F;
    --aw-color-secondary: #E98074;
    /* --aw-color-accent: rgb(152, 216, 239); */
    --aw-color-accent: #E85A4F;

    /* --aw-color-text-heading: rgb(247, 247, 247);
    --aw-color-text-default: rgb(247, 247, 247);
    --aw-color-text-muted: rgb(247, 247, 247 / 80%); */
    --aw-color-text-heading: #8e8d8a57;
    --aw-color-text-default: #8E8D8A;

    /* --aw-color-bg-page: rgb(247, 247, 247); */
    /* --aw-color-bg-page-secondary: rgb(242, 239, 227); */
    --aw-color-bg-page: #EAE7DC;
    --aw-color-bg-header: #D8C3A5;
    --aw-color-bg-page-secondary: #233237;
    --aw-color-bg-footer: #D8C3A5;

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(22, 64, 77);
    --aw-color-secondary: rgb(221, 168, 83);
    --aw-color-accent: rgb(74, 78, 105);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
